<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/sortByBirthdayNewest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/sort_numeric_asc"
            android:drawablePadding="8dp"
            android:text="Birthday (Newest)"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sortByBirthdayOldest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/sort_numeric_desc"
            android:drawablePadding="8dp"
            android:text="Birthday (Oldest)"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sortByNameAZ"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/sort_az_asc"
            android:drawablePadding="8dp"
            android:text="Person Name (A-Z)"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sortByNameZA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/sort_az_desc"
            android:drawablePadding="8dp"
            android:text="Person Name (Z-A)"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>